/*********************************************/		
/*	Formatting Stuff	*/
/*********************************************/

body {
	background-color: #545454;
}

table   { border-top:0em; border-left:0em; margin-bottom:5px;}
th,td   { border-bottom:0em; border-right:0em; }

h1 {
	font-family:verdana;
	font-size:16px;
	margin:0pt 0pt 4px;
}

h2 {
	font-family:verdana;
	font-size:14px;
	line-height:1.2em;
	margin:0pt 0pt 3px;
}

h3 {
	font-family:verdana;
	font-size:12px;
	margin:0pt 0pt 2px;
}

a {
	color:#3252B2;
}

a img {
	border:0pt none;
}

p {
	margin-top:0;
	padding-top: 0;
}

a img {
	margin-bottom:0px;
}

#info, .info {
	color: #ACACAC;
	font-size: 11pt;
}

#caption, .caption {
	border: 2px solid #9c9;
	background-color: #cfc;
}

.label {
	vertical-align: top; 
	text-align: right;
}

ul#address {
	list-style: none;
	padding:0;
}

ul.navigation {
	list-style: none;
	padding:0;
}

/***************************/
#contentcolumn .portrait {
	border:1px solid #999999;
	float:left;
	margin-right:1em;
	padding:4px;
}

#box {
	border:1px solid #CCCCCC;
	margin:20px 0px;
	position:relative;
}

#axis {
	background-color:#E5F8FE;
	padding:6px 13px;
}

#axis h2, #axis h1 {
	color:#666666;
	display:inline;
	font-size:18px;
	font-weight:normal;
	line-height:19px;
	margin:0px;
	padding:0px 5px 0px 0px;
}

#nodes {
	height:1%;
	padding:6px 13px;
}

ul#nodes {
	list-style: none;
	padding:0;
}

/********************************/

.special {
	color:#D01F3C;
	font-weight:bold;
	line-height:1.2em;
}
#status {
	background-color:white;
	border:1px solid #A9A9C7;
	color:black;
	display:block;
	font-size:1.5em;
	font-weight:bold;
	opacity:0.9;
	overflow:auto;
	padding:5px;
	position:absolute;
	right:2px;
	top:2px;
	visibility:hidden;
	width:225px;
	z-index:99;
}
